@using NSE.WebApp.MVC.Extensions
@model IEnumerable<ProdutoViewModel>

@{
    ViewData["Title"] = "Todos os produtos";
}

<section>
    <div>
        <div style="background-image: url(images/banners/Template.jpg); height: 100%; background-position: center; background-repeat: no-repeat; background-size: cover">
            <div class="text-center">
                <img src="~/images/banners/nerdstore.png"/>
            </div>
        </div>
        <div class="container" style="padding-top: 20px">
            <div class="row">
                @foreach (var produto in Model.OrderBy(p => p.Nome))
                {
                    <div class="col-lg-3 col-md-4 col-sm-6">
                        <div class="card card-product-grid">
                            <a asp-controller="Catalogo" asp-action="ProdutoDetalhe" asp-route-id="@produto.Id" class="img-wrap">
                                <img src="~/images/produtos/@produto.Imagem" alt="@produto.Nome" class="card-img-top">
                            </a>
                            <div class="card-body">
                                <h5 class="card-title">
                                    <a asp-controller="Catalogo" asp-action="ProdutoDetalhe" asp-route-id="@produto.Id">
                                        <b>@produto.Nome</b>
                                    </a>
                                </h5>
                                <p class="card-text">
                                    @produto.QuantidadeEstoque<br/><br/>
                                    @produto.Descricao
                                </p>
                            </div>
                            <div class="card-footer">
                                <h3>@(this.FormatoMoeda(produto.Valor))</h3>
                            </div>
                        </div>
                    </div>
                }
            </div>
        </div>
    </div>
</section>