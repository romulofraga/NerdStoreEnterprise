@model NSE.WebApp.MVC.Models.UsuarioLogin

@{
    ViewData["Title"] = "Login";
}


<h1>@ViewData["Title"]</h1>
<div class="row">
    <div class="col-12">
        <section>
            <form asp-route-returnurl="@ViewData["ReturnUrl"]" method="post">
                <h4 class="mb-4">Bem-vindo e boas compras</h4>
                <hr />

                <vc:summary></vc:summary>

                <div class="mb-3">
                    <label class="form-label" asp-for="Email"></label>
                    <input asp-for="Email" class="form-control" value="teste@123.com"/>
                    <span asp-validation-for="Email" class="text-danger"></span>
                </div>

                <div class="mb-3">
                    <label class="form-label" asp-for="Senha"></label>
                    <input type="password" asp-for="Senha" class="form-control" />
                    <span asp-validation-for="Senha" class="text-danger"></span>
                </div>

                <div class="mb-3">
                    <button type="submit" class="btn btn-primary">Registrar</button>
                </div>

                <div class="mb-3">
                    <p>
                        <a asp-action="Registro" asp-controller="Identidade">Criar uma conta</a>
                    </p>
                </div>
            </form>
        </section>
    </div>
</div>


@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}